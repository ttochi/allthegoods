<% content_for :js_css do %>
    <%= stylesheet_link_tag 'component/form', media: 'all' %>
    <%= javascript_include_tag 'component/form' %>
<% end %>

<div id="contents">
    <div class="title">로그인</div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
            <%= f.label :email, '아이디' %>
            <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
            <%= f.label :password, '비번' %>
            <%= f.password_field :password, autocomplete: 'off' %>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
            </div>
        <% end -%>

        <div class="actions">
            <%= f.submit '로그인' %>
        </div>
    <% end %>

    <%= link_to '트위터로 로그인', user_twitter_omniauth_authorize_path %>
</div>
